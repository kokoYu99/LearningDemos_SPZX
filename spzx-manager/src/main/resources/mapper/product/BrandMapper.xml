<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koko.spzx.mapper.BrandMapper">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id, name, logo, create_time, update_time, is_deleted
    </sql>

    <!--  List<Brand> getAllBrandList();  -->
    <select id="getAllBrandList" resultType="com.koko.spzx.model.entity.product.Brand">
        SELECT
        <include refid="columns"/>
        FROM `brand`
        WHERE is_deleted=0
        ORDER BY id DESC
    </select>

    <!--    int insertBrand(Brand brand);  -->
    <insert id="insertBrand" >
        INSERT INTO `brand` (name, logo) VALUES (#{name}, #{logo})
    </insert>

    <!--    int updateBrandById(Brand brand);-->
    <update id="updateBrandById">
        UPDATE `brand`
        <set>
            <if test="name!=null and name!=''">
                name=#{name},
            </if>
            <if test="logo!=null and logo!=''">
                logo=#{logo},
            </if>
            update_time=NOW()
        </set>
        WHERE id=#{id}
    </update>

    <!--   int deleteBrandById(Long id);  -->
    <update id="deleteBrandById">
        UPDATE `brand` SET is_deleted=1, update_time=NOW() WHERE id=#{id}
    </update>

</mapper>