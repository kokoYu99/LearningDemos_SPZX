<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koko.spzx.mapper.SysUserRoleMapper">

    <!-- List<SysRole> findAllRoles(); -->
    <select id="findAllRoles" resultType="com.koko.spzx.model.entity.system.SysRole">
        SELECT id, role_name FROM `sys_role`
    </select>

    <!--    List<Long> findRolesByUserId(Long userId);-->
    <select id="findRolesByUserId" resultType="long">
        SELECT role_id FROM `sys_user_role` WHERE user_id=#{userId}
    </select>

    <!-- int setUserRole(Long userId, Long roleId); -->
    <insert id="setUserRole">
        INSERT INTO `sys_user_role`(user_id, role_id)
        VALUES (#{userId}, #{roleId})
    </insert>

    <!--int deleteRolesByUserId(Long userId);-->
    <delete id="deleteRolesByUserId">
        DELETE FROM `sys_user_role` WHERE user_id=#{userId}
    </delete>

</mapper>